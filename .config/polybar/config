;---------;
; Top-Bar ;
;---------;
[bar/top-bar]
bottom = false
monitor = DP1
override-redirect = true
;;;;;;;;;;;;;;;;;;;; DIMENSIONS ;;;;;;;;;;;;;;;;;;;;;;;
width = 100%
height = 25
offset-x = 0% 
offset-y = 0

;;;;;;;;;;;;;;;;;;;; APPEARANCE ;;;;;;;;;;;;;;;;;;;;;;;
background = #000000
foreground = #875faf

line-size = 1
line-color = #d75fd7

border-size = 0

padding = 4
fixed-center = true
module-margin = 2

font-0 = Fira Code:size=11;2
font-1 = "Font Awesome 5 Free:style=Regular:pixelsize=11;2"
font-2 = "Font Awesome 5 Free:style=Solid:pixelsize=11;2"
font-3 = "Font Awesome 5 Brands:pixelsize=11;2"

;;;;;;;;;;;;;;;;;;;; MODULE ADD ;;;;;;;;;;;;;;;;;;;;;;
modules-left = disk proc ram 
modules-center = bspwm
modules-right = volume date-time 


;----------------;
;   TOP-BAR2     ;
;----------------;
[bar/top-bar2]
