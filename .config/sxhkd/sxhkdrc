# Terminal
super + Return
	termite

# App launcher
super + d
	rofi -show combi

# Restart sxhkd
super + s
	pkill -USR1 -x sxhkd

# Lockscreen
ctrl + alt + l
	i3lock -t -i /home/wojtek/wallpapers/arch.png

# close app
super + q
	bspc node -c
super + Q
	bspc node -k

# Fullscreen
super + f
	bspc desktop -l next

## focus or send to the given desktop
super + shift + {1-8}
	bspc node -d '^{1-8}'
super + 1
	bspc desktop -f ^1 && bspc desktop -f ^4 && bspc desktop -f ^7
super + 2
	bspc desktop -f ^2 && bspc desktop -f ^5 && bspc desktop -f ^8
super + 3
	bspc desktop -f ^3 && bspc desktop -f ^6 && bspc desktop -f ^9

## send the window in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,m} {west,south,north,east}

## toggle beetwen pseudo-tiled & tiled
super + p
    bspc node -t pseudo_tiled

## toggle beetwen floating & tiled
super + space
    bspc node -t floating

## just in case you want to go back to tiled mode but the toggle keybind doesn't work
super + t
	bspc node -t tiled

## expanding windows
super + ctrl + {Left,Right,Up,Down}
	bspc node -z {left -10 0,right 10 0,top 0 -10,bottom 0 10}
	
## shrinking windows
super + alt + {Left,Right,Up,Down}
	bspc node -z {left 10 0,right -10 0,top 0 10,bottom 0 -10}

ctrl + shift + {Left,Down,Up,Right}
	bspc node -s {west,south,north,east}

## reload bspwm config
super + shift + BackSpace
	pkill panel;~/.config/bspwm/bspwmrc

## focus the next/previous desktop in the current monitor
ctrl + alt + Left
	bspc desktop -f prev.local
ctrl + alt + Right
	bspc desktop -f next.local

## Audio controls
XF86AudioMute
	pactl set-sink-mute 0 toggle
XF86Audio{RaiseVolume,LowerVolume}
	pactl set-sink-volume 0 {+,-}5%
XF86Audio{Play,Pause,Next,Prev}
	playerctl {play,pause,next,previous}

## Brightness buttons
XF86MonBrightness{Up,Down}
	xbacklight {-inc,-dec} 5
