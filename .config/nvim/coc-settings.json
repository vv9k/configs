{
	"rust-analyzer.serverPath":
	"/usr/bin/rust-analyzer",
	"rust-analyzer.inlayHints.chainingHints": true,
	"coc.preferences.formatOnSaveFiletypes": ["rust"],
    "clangd.enabled": true,
	"languageserver": {
		"haskell": {
			"command": "hie-wrapper",
			"args": ["--lsp"],
			"rootPatterns": [
				"stack.yaml",
				"cabal.config",
				"package.yaml"
			],
			"filetypes": [
				"hs",
				"lhs",
				"haskell"
			],
			"initializationOptions": {
				"languageServerHaskell": {
					"hlintOn": true
				}
			}
		}
  	}
}

