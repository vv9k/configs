#! /bin/sh

# xrandr
pkill xrandr
xrandr --output HDMI-0 --auto --output DP-1 --rotate right --auto --left-of HDMI-0

bspc monitor HDMI-0 -d I II III
bspc monitor DP-1 -d IV V VI


bspc config border_width        1.5
bspc config window_gap         	15
bspc config split_ratio          0.5
bspc config borderless_monocle   true
bspc config gapless_monocle      true
bspc config focus_follows_pointer true
bspc config top_padding 40


## color settings
bspc config focused_border_color "#d8dee8" 
bspc config normal_border_color "#2f343f"


###############################################################################

# Keybindings
pkill sxhkd
sxhkd &

# Wallpaper
pkill feh
feh --bg-fill /home/wojtek/wallpapers/solarized.png

xset b off # Bell off
xset s off # Screen Save off
xset -dpms # Power Saver off

# Composition manage
pkill picom
picom -b --experimental-backends

# Top bar
pkill polybar
polybar --config=/home/wojtek/.config/polybar/config.ini top1 &
polybar --config=/home/wojtek/.config/polybar/config.ini top2 &

# Notification server
dunst &
