#! /bin/sh


/usr/local/scripts/randr

. /var/cache/monitors/env

bspc monitor $PRIMARY_DISPLAY -d I II III
bspc monitor $SECONDARY_DISPLAY -d IV V VI


bspc config border_width          1.5
bspc config window_gap            15
bspc config split_ratio           0.5
bspc config borderless_monocle    true
bspc config gapless_monocle       true
bspc config focus_follows_pointer true
bspc config top_padding           40


## color settings
bspc config focused_border_color "#d8dee8" 
bspc config normal_border_color "#2f343f"


bspc rule -a any state=floating
bspc rule -a Rocket.Chat desktop=^6 state=tiled
bspc rule -a Thunderbird desktop=^5 state=tiled
bspc rule -a firefox desktop=^4 state=tiled
bspc rule -a firefox:Dialog desktop=^4 state=floating
bspc rule -a firefox:Prompt desktop=^4 state=floating
bspc rule -a firefox:Browser desktop=^4 state=floating
bspc rule -a firefox:Firefox desktop=^4 state=floating
bspc rule -a Brave-browser desktop=^4
bspc rule -a Navigator desktop=^4 state=tiled
bspc rule -a Alacritty desktop=^1 state=tiled
bspc rule -a Chromium state=floating
bspc rule -a rdesktop state=floating

###############################################################################

# Fixes reparenting issues with java windows like clion
wmname LG3D

# Keybindings
pkill sxhkd
sxhkd &
setxkbmap pl

# Wallpaper
pkill feh
feh --bg-fill /usr/share/wallpapers/bogster_vertical.png --bg-fill /usr/share/wallpapers/bogster.png

xset b off # Bell off
xset s off # Screen Save off
xset -dpms # Power Saver off

# Composition manage
pkill picom
picom -b --experimental-backends

# Top bar
pkill polybar
polybar --config=/home/wojtek/.config/polybar/config.ini top1 &
polybar --config=/home/wojtek/.config/polybar/config.ini top2 &

# Notification server
dunst &

# Nightshift
#pkill redshift
#redshift -P -l 52.13:21.0 &
